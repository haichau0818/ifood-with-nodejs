<div class="mt-5">
    
<form method="post" action="/courses/{{course._id}}?_method=PUT">
  <div class="row mb-3">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" id="name" value="{{course.name}}">
    </div>
  </div>
  <div class="row mb-3">
    <label for="auth" class="col-sm-2 col-form-label">Author</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="auth" name="auth" value="{{course.auth}}">
    </div>
  </div>
  <div class="row mb-3">
    <label for="decription" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="decription" name="decription">{{course.decription}}</textarea>
    </div>
  </div>
  <div class="row mb-3">
    <label for="title" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" value="{{course.title}}">
    </div>
  </div>


  <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>